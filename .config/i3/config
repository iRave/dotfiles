bindsym XF86AudioStop exec playerctl stop; exec pkill -SIGRTMIN+10 i3blocks
bindsym XF86AudioNext exec playerctl next; exec pkill -SIGRTMIN+10 i3blocks
bindsym XF86AudioPrev exec playerctl previous; exec pkill -SIGRTMIN+10 i3blocks

